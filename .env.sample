HOSTNAME= # mandatory, external HTTPS gateway pointing to the server, or yourappname.herokuapp.com
BOT_TOKEN= # mandatory, as given by @BotFather
MAPS_API_KEY= # mandatory, must be an 'API Key', with access to Time Zone API (https://console.developers.google.com/apis/library/timezone-backend.googleapis.com)
SENTRY_DSN= # optional
SERVE_SITE= # optional, any value will serve the contents of /site
NO_NEW_USERS= # optional, any value will block unregistered users
